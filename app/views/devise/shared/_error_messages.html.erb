<% if resource.errors.any? %>
  <div id="error_explanation" data-turbo-cache="false" class="bg-yellow-100 border border-yellow-200 rounded-lg p-4 mb-6">
    <ul class="list-none list-inside text-sm text-yellow-700 space-y-1">
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
