<div class="min-h-screen flex flex-col items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full card">
    <h2 class="my-5 text-center text-3xl font-extrabold">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="space-y-4">
        <div>
          <%= f.label :name, class: "block text-sm font-medium" %>
          <%= f.text_field :name, autocomplete: 'name',
                           class: "mt-1 appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-purple-500 focus:border-purple-500 focus:z-10 sm:text-sm" %>
        </div>

        <div>
          <%= f.label :email, class: "block text-sm font-medium" %>
          <%= f.email_field :email, autocomplete: 'email',
                            class: "mt-1 appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-purple-500 focus:border-purple-500 focus:z-10 sm:text-sm" %>
        </div>

        <div>
          <%= f.label :password, class: "block text-sm font-medium" %>
          <%= f.password_field :password,
                               class: "mt-1 appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-purple-500 focus:border-purple-500 focus:z-10 sm:text-sm" %>
        </div>

        <div class="mt-10">
          <%= f.submit "Sign up", class: "group relative w-full flex justify-center btn btn-primary border border-transparent text-sm font-medium focus:outline-none focus:ring-2 focus:ring-offset-2" %>
        </div>

      </div>

    <% end %>

    <div class="mt-6 text-center text-sm">
      <%= render "devise/shared/links", class: "text-purple-600 hover:text-purple-500" %>
    </div>
  </div>
</div>
